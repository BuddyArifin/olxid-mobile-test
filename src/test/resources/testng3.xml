<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Mobile App OLXID " verbose="3" parallel="tests" thread-count="3">
    
    <test name="Home Page OLXID" preserve-order="false" >
        <classes>
            <class name="scenarios.LoginPageTest">
                <methods>
                    <exclude name="verifyOnBoardingDisplayOnFirstInstallOnly" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Login with OLX Account OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.LoginOLXTest"/>
        </classes>
    </test>
    <test name="Category View Sulley OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.CategoryViewTest"/>
        </classes>
    </test>
    <test name="Google Login Sulley OLXID" preserve-order="false" >
        <parameter name="env" value="release" />
        <classes>
            <class name="scenarios.LoginGplusTest"/>
        </classes>
    </test>
    <test name="Facebook Login Sulley OLXID" preserve-order="false" >
        <parameter name="env" value="release" />
        <classes>
            <class name="scenarios.LoginFBTest"/>
        </classes>
    </test>
    <test name="Profile Saya Sulley OLXID" preserve-order="false" >
        <classes>
            <class name="scenarios.ProfilSayaTest"/>
        </classes>
    </test>
    <test name="Iklan Saya Sulley OLXID" preserve-order="false" >
        <classes>
            <class name="scenarios.IklanSayaTest"/>
        </classes>
    </test>
    <test name="Ads Details Seller view OLXID" preserve-order="false" >
        <classes>
            <class name="scenarios.AdsDetailsSellerViewTest">
                <methods>
                    <exclude name="verifyTitleLessMinimum" />
                    <exclude name="verifyDescMax" />
                    <exclude name="verifyDescMaxLower" />
                    <exclude name="verifyChangeKondisi" />
                    <exclude name="verifyUserAbleToClickSetTerjualAds" />
                    <exclude name="verifyUserAbleToClickNonAktifkanIklan" />
                    <exclude name="verifyTitleInvalidChars" />
                    <exclude name="verifyPriceInvalid" />
                    <exclude name="verifyPriceBlank" />
                    <exclude name="verifyUserAbleToDuplicateDeactivateAdsToNewActiveAds" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Paywall Sulley OLXID" preserve-order="false" >
        <classes>
            <class name="scenarios.BeliKuotaTest"/>
        </classes>
    </test>
</suite>