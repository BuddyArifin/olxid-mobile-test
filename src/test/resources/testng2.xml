<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Mobile OLXID" verbose="2" parallel="tests" thread-count="2">

    <test name="Ads Details OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.AdsDetailsTest"/>
        </classes>
    </test>
    <test name="Filter OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.FilterTest">
                <methods>
                    <exclude name="verifyListingAdsSortedByInputtedPriceRange" />
                    <exclude name="verifyListingAdsSortedByConditionColumn" />
                    <exclude name="verifyAlertDisplayWhenGPSOff" />
                    <exclude name="verifyUserAbletoSkipPopUpActivating" />
                    <exclude name="verifyUserAbleToChooseAktivasiGPS" />
                    <exclude name="verifyUserAbleToSelectLocationSuggestion" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Saldo OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.SaldoOlxTest">
                <methods>
                    <exclude name="verifyUserAbleToSwipeInfoBanner" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Post Ads OLXID" preserve-order="false" >
        <classes>
            <class name="scenarios.PostAdsTest"/>
        </classes>
    </test>
    <test name="Listing OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.ListingTest"/>
        </classes>
    </test>
    <test name="Top Listing [Iklan Saya] View OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.PaidFeatureIklanSayaTest"/>
        </classes>
    </test>
    <test name="Top Listing [Post Ads] View OLXID" preserve-order="false">
        <classes>
            <class name="scenarios.PaidFeaturePostAdsTest"/>
        </classes>
    </test>
</suite>